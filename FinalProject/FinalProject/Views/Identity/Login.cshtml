@using FinalProject.ViewModel
@model LoginVeiwModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-white bg-primary">
                    <h4 class="card-title mb-0">Login</h4>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <div class="text-center mt-3">
                            <a asp-action="Register" class="btn btn-outline-secondary">Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
