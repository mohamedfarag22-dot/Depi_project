@using FinalProject.ViewModel
@model RegisterVeiwModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-white bg-primary">
                    <h4 class="card-title mb-0">Register</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Full Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- UserName -->
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter a username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone Number</label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <!-- Address -->
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Role Dropdown -->
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label">Role</label>
                            <select asp-for="Role" class="form-control" id="role" onchange="toggleJobField()">
                                <option value="">Select your role</option>
                                <option value="ServiceProvider">ServiceProvider</option>
                                
                                <option value="User">User</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Job (Visible only if Role is Provider) -->
                        <div class="mb-3" id="job-field" style="display:none;">
                            <label asp-for="Job" class="form-label">Job Title</label>
                            <input asp-for="Job" class="form-control" placeholder="Enter your job title" />
                            <span asp-validation-for="Job" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Re-enter your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-success w-100">Register</button>

                        <!-- Link to Login -->
                        <div class="text-center mt-3">
                            <p>
                                Already have an account?
                                <a asp-action="Login" class="btn btn-outline-primary">Login</a>
                            </p>
                        </div>
                    </form>
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleJobField() {
        var role = document.getElementById('role').value;
        var jobField = document.getElementById('job-field');
        jobField.style.display = (role === 'Provider') ? 'block' : 'none';
    }
</script>
