@model FinalProject.Models.Feedback

@{
    ViewBag.Title = "Delete Feedback";
}

<h1>Delete Feedback</h1>

<div>
    <h4>Are you sure you want to delete this feedback?</h4>
    <div>
        <h5>Content</h5>
        <p>@Model.Content</p>

        <h5>Service ID</h5>
        <p>@Model.ServiceId</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" asp-route-serviceId="@Model.ServiceId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
