@model FinalProject.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-5">
    <div class="text-center py-5">
        <h1>Delete <span>Category</span></h1>
    </div>

    <h3 class="text-center">Are you sure you want to delete this category?</h3>
    <div class="card mx-auto" style="width: 18rem;">
        <img src="~/images/@Model.Image" alt="@Model.Name" class="card-img-top" />
        <div class="card-body">
            <h2 class="card-title text-capitalize">@Model.Name</h2>
            <p class="card-text">@Model.Description</p>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
