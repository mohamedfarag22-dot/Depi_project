@model FinalProject.Dtos.OrderDto

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId"/>
    <input type="hidden" asp-for="ServiceId" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="CreatedDate" />

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AvailableFrom"></label>
        <input asp-for="AvailableFrom" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AvailableTo"></label>
        <input asp-for="AvailableTo" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create Order</button>
</form>

<a asp-controller="Categories" asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-secondary">Back to Category Details</a>
