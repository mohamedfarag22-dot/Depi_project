@model FinalProject.Models.Order

<h2>Delete Order</h2>

<p>Are you sure you want to delete this order?</p>

<div>
    <h4>Order Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Available From</dt>
        <dd class="col-sm-10">@Model.AvailableFrom</dd>
        <dt class="col-sm-2">Available To</dt>
        <dd class="col-sm-10">@Model.AvailableTo</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
