@model FinalProject.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<h1>Delete Service</h1>

<h3>Are you sure you want to delete this service?</h3>
<div>
    <h4>Name</h4>
    <p>@Model.Name</p>
</div>
<div>
    <h4>Description</h4>
    <p>@Model.Description</p>
</div>
<div>
    <h4>Price</h4>
    <p>@Model.Price</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.CategoryId" asp-controller="Categories" class="btn btn-secondary">Cancel</a>
</form>
