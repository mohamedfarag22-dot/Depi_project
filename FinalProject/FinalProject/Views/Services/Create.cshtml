@model FinalProject.Dtos.ServiceDto

<h2>Create Service</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    

    
    <input type="hidden" asp-for="CategoryId"  /> 
    <input type="hidden" asp-for="ServiceProviderId" value="@ViewContext.HttpContext.Session.GetString("UserId")"/>  

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Details" asp-route-id="@Model.CategoryId" asp-controller="Categories" class="btn btn-secondary">Cancel</a>
</form>
